        },
        "url": {
          "raw": "{{BASE_URL}}/v1/chat/completions",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "v1",
            "chat",
            "completions"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://your-host:port"
    },
    {
      "key": "API_KEY",
      "value": "your-api-key"
    }
